@page
@model Iancau_Maria_Lab2.Pages.Books.DeleteModel

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>@Model.Book.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Book.Author.FirstName @Model.Book.Author.LastName</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Book.Price</dd>
        <dt class="col-sm-2">Publishing Date</dt>
        <dd class="col-sm-10">@Model.Book.PublishingDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Book.Publisher?.PublisherName ?? "No Publisher"</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Book.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
